pipeline {
    agent {
      label 'docker'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('dockeruser')
     registry = "sivasanakrmandadi/frontend-lms"
        registryCredential = 'dockerhub'
    }

    stages {
        

        stage('Building the docker image') {
            steps {
                sh 'cd webapp && docker build -t sivasanakrmandadi/frontend-lms .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'docker push sivasanakrmandadi/frontend-lms'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f sivasanakrmandadi/frontend-lms'
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force fe'
                  sh 'docker run -dt -p 3000:80 --name fe sivasankarmandadi/frontend-lms'
            }
        }
    }
}
